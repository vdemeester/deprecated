# Aliases
alias luit="luit -x"
# For old servers
alias ossh="TERM=xterm ssh"
# Old ISO ssh servers
alias oissh="TERM=xterm luit -x -encoding ISO-8859-15 ssh"

if [[ $(uname) = 'Darwin' ]]; then
	alias ls="ls -G"
	alias ll="ls -l"
	if [[ -f /Applications/MacVim.app/Contents/MacOs/Vim ]]; then
		alias vim="/Applications/MacVim.app/Contents/MacOS/Vim"
		alias gvim="/Applications/MacVim.app/Contents/MacOS/Vim -g"
	fi
	# -p is for handshake. This is needed on FreeBSD and Darwin
	# to get it work right.
	alias oissh="TERM=xterm luit -x -p -encoding ISO-8859-15 ssh"
elif [[ $(uname) = 'Linux' ]]; then
	# ls
	alias ls="ls --color=always"
	alias ll="ls -l --group-directories-first"
	alias gvim="gvim 2>/dev/null"
fi
alias la="ls -a" # Show hidden files
alias lx="ls -lXB" # Sort by extension
alias lk="ls -lSr" # Sort by size (biggest last)
alias lc="ls -ltcr"         # sort by and show change time, most recent last
alias lu="ls -ltur"         # sort by and show access time, most recent last
alias lt="ls -ltr"          # sort by date, most recent last
alias lm="ls -al |more"     # pipe through 'more'
alias lr="ls -lR"           # recursive ls
alias lt="ls -lt"

alias tree="tree -C"

# Safe "aliases"
alias rmi="rm -i"
alias cpi="cp -i"
alias mvi="mv -i"

alias vi="vim"

# vim:syntax=zsh
