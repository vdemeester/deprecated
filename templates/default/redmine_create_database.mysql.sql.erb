#
# Create Redmine database and user.
# Generated by Chef. Local modifications will be overwritten.
#
# Command: mysql -u root -p < create_database.sql
#

CREATE DATABASE IF NOT EXISTS <%= node[:redmine][:db][:dbname] %> CHARACTER SET utf8 COLLATE utf8_general_ci;

GRANT ALL ON <%= node[:redmine][:db][:dbname] %>.* TO '<%= node[:redmine][:db][:user] %>'@'localhost' IDENTIFIED BY '<%= node[:redmine][:db][:password] %>';
FLUSH PRIVILEGES;
