[user]
	name = ${name}
	email = ${email}
[alias]
	co = checkout
	st = status
	ci = commit -v
	br = branch
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = white reverse
	local = white 
	remote = green
[color "diff"]
	meta = white
	frag = magenta reverse
	old = red 
	new = green 
[color "status"]
	added = green
	changed = yellow
	untracked = red
[core]
	editor = gvim -v
	excludesfile = ~/.gitignore_global
[push]
	default = matching
[gui]
	editor = gvim
[github]
	user = ${gh_user}
	token = ${gh_token}
